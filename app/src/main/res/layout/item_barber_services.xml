<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_8sdp">

    <RelativeLayout
        android:id="@+id/relService"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/service_unselected_bg">

        <ImageView
            android:id="@+id/ivServiceIcon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_shaving" />

        <ImageView
            android:id="@+id/ivServiceSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_4sdp"
            android:src="@drawable/ic_select_service" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relService"
        android:layout_alignEnd="@+id/relService"
        android:layout_alignStart="@+id/relService"
        android:gravity="center"
        android:textColor="@color/app_black"
        android:layout_marginTop="0dp"
        android:text="Shampoo" />

</RelativeLayout>